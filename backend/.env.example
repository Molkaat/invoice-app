# API Configuration
API_NAME="Invoice AI API"
API_VERSION="3.0.0"
API_URL="http://localhost:8000"
DEBUG=true

# Database Configuration
DATABASE_URL="sqlite:///./invoices.db"
# For PostgreSQL: DATABASE_URL="postgresql://user:password@localhost/invoices"

# AI Service Configuration (Required)
AINBOX_API_KEY=your_ainbox_api_key_here
AI_API_URL="https://workspace.ainbox.ai/api/chat/completions"
AI_MODEL="gpt-4"
AI_TIMEOUT=60

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES='["application/pdf","image/jpeg","image/png","image/bmp","image/tiff","image/gif"]'

# OCR Configuration
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_DELAY=3

# CORS Configuration
CORS_ORIGINS='["http://localhost:3000","http://127.0.0.1:3000"]'

# Processing Configuration
PROCESSING_TIMEOUT=300
DEFAULT_LANGUAGE="en"
DEFAULT_DATE_FORMAT="MM/DD/YYYY"

# Validation Configuration
MIN_CONFIDENCE_THRESHOLD=0.5
MAX_AMOUNT_THRESHOLD=1000000.0
TAX_RATE_WARNING_THRESHOLD=25.0

# Security Configuration
API_KEY_HEADER="X-API-Key"
RATE_LIMIT_PER_MINUTE=60
SECRET_KEY=your_secret_key_here_generate_a_strong_one

# Webhook Configuration
DEFAULT_WEBHOOK_URL=https://webhook.site/your-default-webhook-id
QUICKBOOKS_WEBHOOK_URL=
XERO_WEBHOOK_URL=